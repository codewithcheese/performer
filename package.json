{
  "name": "performer",
  "type": "module",
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "pnpm": "^8.0.1"
  },
  "scripts": {
    "watch": "pnpm --recursive --parallel run watch",
    "ci:publish": "pnpm publish -r --dry-run --no-git-checks --access public",
    "test": "vitest run",
    "typecheck": "pnpm --recursive --parallel run typecheck",
    "e2e": "playwright test packages/performer-ui --config packages/performer-ui/playwright.config.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.17",
    "vitest": "0.34.6"
  }
}
