import { createRoot } from "react-dom/client";
import { ChatWindow } from "@performer/playground";
import "./styles.css"

tailwind.config = {
  theme: {
    extend: {
      fontFamily: {
        sans: ['Inter var', 'sans-serif']
      }
    }
  },
}

// import Chat from "./Chat";
import App from "./App";

let chat = <ChatWindow App={App} />
const root = createRoot(document.getElementById("root"));
root.render(chat);

if (module.hot) {
  module.hot.accept('./App', async function(...args) {
    const { default: NewApp } = await import('./App')
    console.log('App', App.toString(), NewApp.toString(), args)
    chat = <ChatWindow App={NewApp} />
    root.render(chat)
  });
}




